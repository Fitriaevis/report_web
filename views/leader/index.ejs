<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Activity - PLN UP3 Gresik</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="temp_report_web/assets/favicon.ico" />
    <!-- Custom Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600&display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="temp_report_web/css/styles.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
        }
        .table-custom {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
        }
        .table-custom th, .table-custom td {
            padding: 12px;
            text-align: left;
        }
        .table-custom thead th {
            background-color: #0056a1;
            color: #fff;
        }
        .table-custom tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .table-custom tbody tr:nth-child(odd) {
            background-color: #fff;
        }
        .table-custom tbody tr:hover {
            background-color: #f1f1f1;
        }
        .table-custom th, .table-custom td {
            border: 1px solid #ddd;
        }
        .table-custom td:first-child, .table-custom th:first-child {
            border-left: none;
        }
        .table-custom td:last-child, .table-custom th:last-child {
            border-right: none;
        }
        .table-custom thead th:first-child, .table-custom thead th:last-child {
            border-top: none;
        }
    </style>
</head>
<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <!-- Navigation-->
        <%- include('partials/_navigation') %>
        <!-- Header-->
        <header id="home" class="py-3">
            <div class="container px-5 pb-5">
                <div class="row gx-5 align-items-center">
                    <div class="col-xxl-5 col-md-6">
                        <!-- Header text home content-->
                        <%- include('partials/_textHome') %>
                    </div>
                    <div class="col-xxl-7 col-md-6">
                        <!-- Header profile home picture-->
                        <%- include('partials/_profileHome') %>
                    </div>
                </div>
            </div>
        </header>
        <!-- Form input -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#FFFFFF" fill-opacity="1" d="M0,320L34.3,298.7C68.6,277,137,235,206,229.3C274.3,224,343,256,411,245.3C480,235,549,181,617,176C685.7,171,754,213,823,245.3C891.4,277,960,299,1029,282.7C1097.1,267,1166,213,1234,197.3C1302.9,181,1371,203,1406,213.3L1440,224L1440,320L1405.7,320C1371.4,320,1303,320,1234,320C1165.7,320,1097,320,1029,320C960,320,891,320,823,320C754.3,320,686,320,617,320C548.6,320,480,320,411,320C342.9,320,274,320,206,320C137.1,320,69,320,34,320L0,320Z"></path>
        </svg>
        <section id="report" class="py-5">
            <div class="container px-5">
                <div class="row gx-5 justify-content-center">
                    <div class="col-xxl-8">
                        <div class="text-center my-5">
                            <h1 class="display-3 fw-bolder mb-5"><span class="text-gradient d-inline">Form Activity</span></h1>
                            <form id="activityForm" action="#" method="POST" enctype="multipart/form-data">
                                <div class="input-group mb-4 shadow">
                                    <input type="file" class="form-control" id="inputGroupFile03" aria-describedby="inputDokumentasi" aria-label="Upload">
                                    <button class="btn btn-outline-dark text-black" type="button" id="inputDokumentasi"><i class="bi bi-images"></i></button>
                                </div>
                                <div class="input-group mb-3 shadow">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Description</span>
                                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                    <button class="btn btn-outline-dark text-black" type="button" id="inputDeskripsi"><i class="bi bi-list-check"></i></button>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="bg-gradient-navy-to-info btn btn-info text-white">Simpan</button>
                                </div>
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-custom">
                                <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">...</th>
                                        <th scope="col">...</th>
                                        <th scope="col">...</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">...</th>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#FFFFFF" fill-opacity="1" d="M0,320L34.3,298.7C68.6,277,137,235,206,229.3C274.3,224,343,256,411,245.3C480,235,549,181,617,176C685.7,171,754,213,823,245.3C891.4,277,960,299,1029,282.7C1097.1,267,1166,213,1234,197.3C1302.9,181,1371,203,1406,213.3L1440,224L1440,0L1405.7,0C1371.4,0,1303,0,1234,0C1165.7,0,1097,0,1029,0C960,0,891,0,823,0C754.3,0,686,0,617,0C548.6,0,480,0,411,0C342.9,0,274,0,206,0C137.1,0,69,0,34,0L0,0Z"></path>
        </svg>
        <!-- About Section-->
        <%- include('partials/_about') %>
    </main>
    <!-- Footer-->
    <%- include('partials/_footer') %>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="temp_report_web/js/scripts.js"></script>
    <!-- Bootstrap Toast JS -->
    <script>
        document.getElementById('activityForm').addEventListener('submit', function(event) {
            var confirmation = confirm("Apakah data yang diinputkan sudah benar?");
            if (!confirmation) {
                event.preventDefault();
            } else {
                event.preventDefault(); // Prevent form submission to show the toast
                var toastEl = new bootstrap.Toast(document.getElementById('liveToast'));
                toastEl.show();
                // Simulate form submission (e.g., by using AJAX or similar here if needed)
            }
        });
    </script>

    <!-- Bootstrap Toast HTML -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Data sudah diinputkan
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
</body>
</html>
